.header
  .top
    .top__main
      %h1.top__main__logo
        = link_to root_path, class: "top-logo" do
          = image_tag 'logo.png', class: "logoimage"
      .search-form
        = form_with url: search_items_path, local: true, method: :get, class: "search-box" do |f|
          = f.text_field :keyword, placeholder: "キーワードから探す", class: "search-box__text"
          = f.label class: "search-box__submit" do
            = f.submit "", class: "search-box__btn" 
            = image_tag 'icon-search 1.png', class: "searchicon"
           
    .info
      %ul.info__left
        %li.info__left__category
          = link_to '#', class: "info-category" do
            カテゴリー
        %li.info__left__brand
          = link_to '#', class: "info-brand" do
            ブランド
      - if user_signed_in?
        %ul.info__right
          %li.info__right__new
            = link_to user_path(current_user), class: "user-new" do
              マイページ
      - else
        %ul.info__right
          %li.info__right__login
            = link_to user_session_path, class: "user-login" do
              ログイン
          %li.info__right__new
            = link_to new_user_registration_path, class: "user-new" do
              新規会員登録