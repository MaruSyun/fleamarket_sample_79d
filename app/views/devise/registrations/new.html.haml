.AddressForm
  = link_to image_tag(src="logo.png", class: "TsurutaIcon"), root_path
  .AddressForm__title
    会員登録
  .AddressForm__contents
    = form_with model: @user, url: user_registration_path, local: true do |f|
      = render "devise/shared/error_messages", resource: resource
      .AddressForm__content
        %h3.AddressForm__content__nickname 
          ニックネーム
          %span.AddressForm__content__require 必須
        .Addressname_nickname
          = f.text_field :nickname, placeholder: "例）アヤヤ", class: "AddressInput"
      .AddressForm__content
        %h3.AddressForm__content__name
          お名前 
          %span.AddressForm__content__require 必須
        .AddressName__family_name
          = f.text_field :family_name, placeholder: "例）山田", class: "AddressInput"
        .AddressName__first_name
          = f.text_field :first_name, placeholder: "例）彩", class: "AddressInput"
      .AddressForm__content
        %h3.AddressForm__content__name 
          お名前カナ
          %span.AddressForm__content__require 必須
        .AddressName__family_name_kana
          = f.text_field :family_name_kana, placeholder: "例）ヤマダ", class: "AddressInput"
        .AddressName__first_name_kana
          = f.text_field :first_name_kana, placeholder: "例）アヤ", class: "AddressInput"
      .AddressForm__content
        %h3.AddressForm__content__name 
          メールアドレス
          %span.AddressForm__content__require 必須
        .AddressPostal_code
          = f.text_field :email, placeholder: "例）road@gmail.com", class: "AddressInput"
      .AddressForm__content
        %h3.AddressForm__content__name 
          パスワード
          %span.AddressForm__content__require 必須
        .AddressPrefecture
          = f.password_field :password, placeholder: "7文字以上の半角英数字", class: "AddressInput"
        %h3.AddressForm__content__name  
          パスワード（確認用）
          %span.AddressForm__content__require 必須
        .AddressPrefecture
          = f.password_field :password_confirmation, placeholder: "7文字以上の半角英数字", class: "AddressInput"
      .AddressForm__content
        %h3.AddressForm__content__name 
          生年月日
          %span.AddressForm__content__require 必須
        .Addressbirthday
          = f.date_field :birth_day, class: "AddressInput"
      .AddressForm__content
        = f.submit "次へ", class: "TsurutaSubmit"
  .TsurutaTerms
    = link_to "#", class: "TsurutaTerm" do
      プライバシーポリシー
    = link_to "#", class: "TsurutaTerm" do
      利用規約
    = link_to "#", class: "TsurutaTerm" do
      特定商取引に関する表記  
  = image_tag src="logo-white.png", class: "TsurutaIcon2"    
      